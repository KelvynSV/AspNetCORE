
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>
<body>
    <div class="container">

        <form method="post" action="/contato/recebercontato">
            <div class="form-group">
                <label for="nome">Nome:</label>
                <input type="text" name="nome" value="@ViewBag.Contato.Nome" class="form-control" id="nome" placeholder="Digite seu nome:">
                @Html.ValidationMessage("nome")
            </div>
            <div class="form-group">
                <label for="email">E-mail:</label>
                <input type="text" name="email" value="@ViewBag.Contato.Email" class="form-control" id="email" placeholder="Digite seu E-mail:">
                @Html.ValidationMessage("email")
            </div>
            <div class="form-group">
                <label for="assunto">Assunto:</label>
                <input type="text" name="assunto" value="@ViewBag.Contato.Assunto" class="form-control" id="assunto" placeholder="Digite o assunto:">
                @Html.ValidationMessage("assunto")
            </div>
            <div class="form-group">
                <label for="mensagem">Mensagem:</label>
                <textarea type="mensagem" name="mensagem" class="form-control" id="mensagem">@ViewBag.Contato.Nome</textarea>
                @Html.ValidationMessage("mensagem")
            </div>


            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        @ViewBag.Mesagem
    </div>
</body>
</html>
